---
const { component_id, heading, subheading, cards } = Astro.props;
const componentName = "content-row";
---

<section
	{...component_id ? { id: component_id } : {}}
	class=`${componentName}`>
	<div class="py-8 md:py-24 wrapper">
		<div class="text-center">
			<h2>
				{heading}
			</h2>
			<p class="lead mt-4">
				{subheading}
			</p>
		</div>
		{
			cards && cards.length > 0 && (
				<div class="mt-12 lg:mt-14 space-y-8">
					{cards.map((card) => (
						<div class="border border-gray-900 grid-cols-1 md:grid-cols-12 gap-y-8 grid">
							<div class="md:col-span-3 flex flex-row md:flex-col bg-gray-900 p-8 space-y-4 ">
								<div class="flex justify-end">
									<img
										class="fill-white w-8 h-8 block"
										width={32}
										height={32}
										alt=""
										src={card.icon_image}
									/>
								</div>

								<div>
									<h6 class="text-primary-600">{card.subtitle}</h6>
									<h3 class="md:mt-4 mb-2.5 text-white">{card.title}</h3>
								</div>
							</div>
							<div class="md:col-span-9 p-10 space-y-4">
								<p class="lead">{card.description}</p>
								<div>{card.categories}</div>
								<a
									href={card.link}
									class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900">
									{card.link_text}
									<svg
										class="ml-2 -mr-1 w-5 h-5"
										fill="currentColor"
										viewBox="0 0 20 20"
										xmlns="http://www.w3.org/2000/svg">
										<path
											fill-rule="evenodd"
											d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
											clip-rule="evenodd"
										/>
									</svg>
								</a>
							</div>
						</div>
					))}
				</div>
			)
		}
	</div>
</section>
