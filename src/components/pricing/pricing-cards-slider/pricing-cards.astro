---
const { component_id, heading, description, cards } = Astro.props;
const componentName = "pricing-cards";
---

<section {...component_id ? { id: component_id } : {}} class=`${componentName}`>
    <div class="py-8 md:py-24 wrapper">
        <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-12">
            <h2 class="mb-4">
                {heading}
            </h2>
            <p class="mt-4">
                {description}
            </p>
        </div>
        <div class="mt-6 space-y-8 flex flex-col md:flex-row sm:gap-6 xl:gap-10 lg:space-y-0">
            {
                cards.map((card) => (
                    <div class="flex flex-col p-6 mx-auto w-full text-center text-gray-900 bg-white rounded-lg border border-gray-100 shadow dark:border-gray-600 xl:p-8 dark:bg-gray-800 dark:text-white">
                        <h3 class="mb-4">{card.title}</h3>
                        <p class="">{card.description}</p>
                        <div class="flex justify-center items-baseline my-8">
                            <span class="mr-2 text-5xl font-extrabold">{card.price}</span>
                            <span class="text-gray-500 dark:text-gray-400">/month</span>
                        </div>

                        <ul role="list" class="mb-8 space-y-4 text-left">
                            {card.items.map((item) => (
                                <li class="flex items-center space-x-3">
                                    <svg
                                        class="flex-shrink-0 w-5 h-5 text-green-500 dark:text-green-400"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path
                                            fill-rule="evenodd"
                                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                    <span>{item.text}</span>
                                </li>
                            ))}
                        </ul>

                        <a href={card.link} class="button primary">
                            {card.cta}
                        </a>
                    </div>
                ))
            }
        </div>
    </div>
</section>
