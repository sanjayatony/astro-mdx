---
const { form } = Astro.props;
---

<div class="bg-white p-4 rounded-xl space-y-3">
    <h3 class="text-2xl font-medium">{form.heading}</h3>
    <p class="">{form.description}</p>
    <input class="" placeholder="Enter your email here" type="email" required="" />
    <button class="button gray w-full">{form.button_text}</button>
    <div class="content-html text-xs">
        <Fragment set:html={form.footer_content_html} />
    </div>
</div>
